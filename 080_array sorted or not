#include <stdio.h>
int main() {
    int n, i, flag = 1;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter elements of the array:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    for(i = 0; i < n-1; i++) {
        if(arr[i] > arr[i+1]) {
            flag = 0;
            break;
        }
    }

    if(flag)
        printf("Array is sorted in ascending order.\n");
    else
        printf("Array is not sorted.\n");

    return 0;
}
